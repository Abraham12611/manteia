{
  "designSystem": {
    "theme": "Manteia Design System",
    "visualStyle": {
      "aesthetic": "futuristic-minimalist",
      "mood": "professional-innovative",
      "designPhilosophy": "clean-tech-forward"
    },
    "colorPalette": {
      "primary": {
        "background": "#0a0a0a",
        "backgroundVariant": "#1a1a1a",
        "surface": "#2a2a2a"
      },
      "accent": {
        "primary": "#00ff88",
        "secondary": "#88ff00",
        "tertiary": "#ffff00"
      },
      "neutral": {
        "white": "#ffffff",
        "lightGray": "#e5e5e5",
        "mediumGray": "#888888",
        "darkGray": "#333333"
      },
      "semantic": {
        "success": "#00ff88",
        "warning": "#ffff00",
        "error": "#ff4444"
      }
    },
    "typography": {
      "hierarchy": {
        "hero": {
          "fontSize": "clamp(3rem, 8vw, 6rem)",
          "fontWeight": "300-400",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em"
        },
        "heading": {
          "fontSize": "clamp(2rem, 5vw, 4rem)",
          "fontWeight": "300-500",
          "lineHeight": "1.2"
        },
        "subheading": {
          "fontSize": "clamp(1.2rem, 3vw, 1.8rem)",
          "fontWeight": "300-400",
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.6"
        },
        "caption": {
          "fontSize": "0.875rem",
          "fontWeight": "400",
          "opacity": "0.7"
        }
      },
      "fontStack": "system-ui, -apple-system, sans-serif",
      "characteristics": {
        "style": "clean-geometric",
        "weight": "light-to-medium",
        "spacing": "generous"
      }
    },
    "layout": {
      "structure": {
        "type": "centered-hero",
        "maxWidth": "1200px",
        "padding": "clamp(1rem, 5vw, 3rem)",
        "verticalSpacing": "clamp(3rem, 8vh, 8rem)"
      },
      "grid": {
        "system": "css-grid-flexbox-hybrid",
        "breakpoints": {
          "mobile": "320px",
          "tablet": "768px",
          "desktop": "1024px",
          "large": "1440px"
        }
      },
      "navigation": {
        "position": "top-horizontal",
        "style": "minimal-text-links",
        "alignment": "space-between",
        "logoPosition": "left",
        "ctaPosition": "right"
      }
    },
    "components": {
      "buttons": {
        "primary": {
          "style": "rounded-pill",
          "background": "accent-gradient-or-solid",
          "padding": "0.75rem 2rem",
          "fontWeight": "500",
          "fontSize": "0.9rem",
          "textColor": "dark",
          "hoverEffect": "scale-or-glow"
        },
        "secondary": {
          "style": "rounded-pill-outline",
          "border": "1px solid accent",
          "background": "transparent",
          "textColor": "accent",
          "hoverEffect": "fill-transition"
        }
      },
      "cards": {
        "style": "floating-glass-or-dark",
        "background": "rgba(255,255,255,0.05) or dark-surface",
        "border": "1px solid rgba(255,255,255,0.1)",
        "borderRadius": "1rem",
        "backdrop": "blur-effect",
        "shadow": "0 8px 32px rgba(0,0,0,0.3)"
      },
      "statistics": {
        "layout": "horizontal-grid",
        "numberStyle": "large-prominent",
        "labelStyle": "small-muted",
        "iconStyle": "colorful-accent"
      }
    },
    "visualEffects": {
      "animations": {
        "hover": "subtle-scale-glow",
        "transitions": "smooth-ease-out",
        "duration": "200-300ms",
        "curves": "ease-out, cubic-bezier"
      },
      "backgrounds": {
        "primary": "dark-gradient-or-solid",
        "patterns": "subtle-geometric-or-particle",
        "overlays": "gradient-mesh-abstract"
      },
      "glowEffects": {
        "elements": "buttons-cards-icons",
        "intensity": "subtle-to-medium",
        "colors": "accent-based"
      },
      "glassmorphism": {
        "usage": "cards-modals-overlays",
        "properties": "backdrop-blur-border-transparency"
      }
    },
    "imagery": {
      "style": "abstract-geometric-tech",
      "treatment": "high-contrast-minimal",
      "icons": {
        "style": "outline-or-filled",
        "weight": "light-to-medium",
        "corners": "rounded"
      },
      "illustrations": {
        "style": "minimal-abstract-geometric",
        "colors": "accent-monochrome"
      }
    },
    "spacing": {
      "scale": "1.25-ratio-or-larger",
      "baseUnit": "1rem",
      "rhythm": {
        "tight": "0.5rem",
        "normal": "1rem",
        "loose": "2rem",
        "extraLoose": "4rem"
      }
    },
    "interactionPatterns": {
      "microInteractions": {
        "buttons": "hover-scale-glow",
        "links": "color-change-underline",
        "cards": "lift-shadow-increase"
      },
      "feedback": {
        "success": "green-glow-checkmark",
        "loading": "subtle-pulse-spinner",
        "error": "red-glow-shake"
      }
    },
    "responsiveStrategy": {
      "approach": "mobile-first-progressive",
      "breakpoints": "fluid-container-queries",
      "textScaling": "clamp-based-fluid",
      "layoutAdaptation": "stack-to-grid-transformation"
    },
    "accessibilityFeatures": {
      "contrast": "WCAG-AA-compliant",
      "focusStates": "visible-accent-outline",
      "motionReduction": "respect-prefers-reduced-motion",
      "semanticMarkup": "proper-heading-hierarchy"
    }
  },
  "implementationGuidelines": {
    "cssFramework": "tailwind-or-custom-properties",
    "jsFramework": "react-vue-agnostic",
    "buildTools": "modern-bundler-support",
    "designTokens": "css-custom-properties-json"
  },
  "brandPersonality": {
    "adjectives": ["innovative", "trustworthy", "cutting-edge", "professional", "approachable"],
    "visualTone": "confident-modern-clean",
    "userExperience": "intuitive-engaging-efficient"
  }
}