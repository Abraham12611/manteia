# Environment Configuration Template
# Copy this to .env and fill in your values

# Environment Configuration
NODE_ENV=development
PORT=3001

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 1inch API Configuration
ONEINCH_API_KEY=your_1inch_api_key_here
ONEINCH_API_BASE_URL=https://api.1inch.dev

# Sui Configuration
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_PRIVATE_KEY=your_sui_private_key_base64_here
SUI_PACKAGE_ID=your_deployed_package_id_here
SUI_RESOLVER_REGISTRY_ID=your_resolver_registry_object_id_here

# Ethereum Configuration (for cross-chain operations)
ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your_key_here
ETH_PRIVATE_KEY=your_ethereum_private_key_here

# Resolver Bot Configuration
RESOLVER_BOT_ENABLED=true
RESOLVER_SUI_PRIVATE_KEY_BASE64=your_resolver_sui_private_key_base64
RESOLVER_PRIVATE_KEY=your_resolver_ethereum_private_key

# Database Configuration (if using a database for order tracking)
DATABASE_URL=postgresql://user:password@localhost:5432/manteia

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100
SWAP_RATE_LIMIT=10
QUOTE_RATE_LIMIT=50

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=3002

# Cross-chain Configuration
DEFAULT_SLIPPAGE=1
DEFAULT_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SWAPS=10

# Cetus DEX Configuration (for Sui native swaps)
CETUS_API_URL=https://api-sui.cetus.zone
CETUS_SDK_ENV=testnet